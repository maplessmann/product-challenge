extends includes/template.pug

block content
    nav.menu-mobile
        - const menuMobileItems = ['Masculino', 'Feminino', 'Menino', 'Menina'];
        each item in menuMobileItems
            a.menu-item(href='#')= item
    
    nav.navbar
        .navbar-fixed
            .container
                .hamburger.btn-mobile-menu
                    .hamburger-icon
                        .hamburger-line
                    .hamburger-label Menu
                
                img.logo(src='images/nike-logo.png', alt='Logo da Nike')
                
                ul.menu
                    - const menuItems = ['Masculino', 'Feminino', 'Menino', 'Menina'];
                    each item in menuItems
                        li.menu-item: a.menu-link(href='#')= item
                        
                a.cart-button(href='#', data-count='0')
                    img.cart-image(src='images/cart.png', alt='Ícone do carrinho de compras')
            
    header.header
        img.header-image(src='images/banner.png', alt='Jogador chutando uma bola')
        
    .container
        strong Chuteiras HyperVenom:
        .categories
            input(type='checkbox')
            label(for="checkbox") Cano alto
            input(type='checkbox')
            label(for="checkbox") Cano baixo
            input(type='checkbox')
            label(for="checkbox") Futebol Cmapo
            input(type='checkbox')
            label(for="checkbox") Futebol Society
            
        .products-group.products-best-sellers
            h4.products-group-title Mais vendidos
            .slider.row
            .slider-bullets
                
        .products-group.products-releases
            h4.products-group-title Lançamentos
            .slider.row
            .slider-bullets
        
